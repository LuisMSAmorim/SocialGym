@model SocialGym.BLL.Entities.Community

@{
    ViewData["Title"] = "Ingress";
}

<div>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
         </div>
    }
    else
    {
        <h3>Você deseja ingressar na comunidade @Model.Name?</h3>

        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
    
        <form asp-action="Ingress">
            <input type="hidden" asp-for="CommunityId" />
            <button type="submit" class="btn btn-primary" >Ingressar</button>
            <a class="btn btn-primary" asp-action="Index">Voltar</a>
        </form>
    }
</div>
