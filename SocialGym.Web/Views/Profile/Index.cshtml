@model SocialGym.BLL.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "Usuário";
}

@if(Model == null){
        <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}else{
    <h1>@ViewBag.UserName</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Avatar)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Avatar)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.BenchPressPR)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.BenchPressPR)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.BackSquatPR)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.BackSquatPR)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DeadLiftPR)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DeadLiftPR)
            </dd>
        </dl>
    </div>
}
